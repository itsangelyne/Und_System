					<h6 class="card-subtitle text-muted">GYRT</h6>
				</div>
			</div>
		</div>

		<div class="row justify-content-around">
			<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
				<div class="card h-100">
					<img class="card-img-top" style="filter:grayscale(100%);" src="/assets/mri.png" alt="mriplans">
					<div class="card-body">
						<h5 class="card-title text-muted">Mortgage Redemption Insurance Plans</h5>
						<h6 class="card-subtitle text-muted">MRI</h6>
					</div>
				</div>
			</div>

			<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
				<div class="card h-100">
					<img class="card-img-top" style="filter:grayscale(100%);" src="/assets/cblicc.png" alt="standardplans">
					<div class="card-body">
						<h5 class="card-title text-muted">Standard Plans</h5>
					</div>
				</div>
			</div>

			<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
				<div class="card h-100">
					<img class="card-img-top" style="filter:grayscale(100%);" src="/assets/countrybankers2.png" alt="decsplan">
					<div class="card-body">
						<h5 class="card-title text-muted">DECS Plans</h5>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


